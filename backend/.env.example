PORT=3001
DATABASE_URL="postgresql://user:password@localhost:5432/moltiarena?schema=public"

# OpenAI (required for AI decision engine)
OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-5-mini

# Arena engine tick interval (seconds)
# TICK_SECONDS=60

# Event storage cleanup interval (seconds)
# Events older than this will be deleted periodically
# Default: 3600 (1 hour)
# CLEANUP_TIME=3600

# AI memory summarization interval (hours)
# Agents' memory will be AI-summarized periodically to generate better insights
# Default: 6 hours
# MEMORY_SUMMARIZATION_INTERVAL_HOURS=6

# Max characters for AI-generated persona memory (avoids clipping; prompt asks for ~300 words)
# Default: 2500
# PERSONA_MEMORY_MAX_CHARS=2500

# nad.fun WebSocket feed (required)
# RPC_URL is for HTTP RPC calls (read-only queries)
# WS_URL is for WebSocket subscriptions (real-time events) - MUST be wss:// not https://
RPC_URL=https://testnet-rpc.monad.xyz
WS_URL=wss://testnet-rpc.monad.xyz
# Alternative WS_URL: wss://rpc-testnet.monadinfra.com
NAD_NETWORK=testnet
# Comma-separated list of nad.fun token addresses
# For non-graduated tokens (on bonding curve): leave USE_DEX_STREAM unset or false
# For graduated tokens (moved to DEX): set USE_DEX_STREAM=true
# Get token addresses from https://nad.fun (testnet/mainnet)
ARENA_TOKENS=0xToken1,0xToken2,0xToken3,0xToken4,0xToken5
# Set to true if your tokens are graduated (moved from bonding curve to DEX)
# USE_DEX_STREAM=true

# Contract Indexer (required for on-chain agent creation)
# Points to the chain where contracts are deployed (may differ from market data network)
MOLTI_TOKEN_ADDRESS=0xe2954c50Aa4ccB153198c007E427a98d9Ba3ab57
MOLTI_ARENA_ADDRESS=0x22C9701b199FF9B43bC7eAdccCb46257482607B8
# Chain and RPC for contracts (backend/src/chains.ts). Use 143 + mainnet RPC for mainnet.
# CHAIN_ID=10143
INDEXER_RPC_URL=https://testnet-rpc.monad.xyz

# Agent Wallet Encryption (AES-256-GCM master key)
# Generate with: openssl rand -hex 32
AGENT_ENCRYPTION_KEY=

# Pimlico ERC-4337 Bundler (optional, uses public endpoint if not set)
# Get free API key at https://dashboard.pimlico.io
# PIMLICO_API_KEY=

# Epoch Service (required for createEpoch, autoRenewEpoch, endEpoch)
# Private key of the operator wallet â€” must match setOperator() on the contract
# If not set: epochs are created in DB only; on-chain epoch calls are skipped
OPERATOR_PRIVATE_KEY=

# Epoch renewal fee in MOLTI (default: 100)
# EPOCH_RENEWAL_FEE_MOLTI=100

# Short-epoch demo: set to number of minutes (e.g. 5) for 5-min epochs and transition every minute.
# Omit or set to 1440 for production 24h UTC epochs.
# EPOCH_DURATION_MINUTES=5
